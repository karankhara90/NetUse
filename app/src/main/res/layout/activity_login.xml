<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="khara.karan.netuse.LoginActivity"
    android:background="#6ad2ff">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
        android:layout_height="284dp" android:orientation="vertical"
        android:weightSum="1">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sign in to your account"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#370700"
            android:textSize="18dp"
            android:background="#fffaa1"
            android:paddingTop="5dp"
            android:paddingLeft="70dp"
            android:paddingRight="15dp"
            android:paddingEnd="5dp"
            android:layout_weight="0.10" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="50"
            android:id="@+id/usernameField"
            android:hint="Username"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#ffffff"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="0.45"
            android:imeOptions="actionNext" />
            <requestFocus/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="50"
            android:id="@+id/passwordField"
            android:hint="Password"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/usernameField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/usernameField"
            android:layout_alignEnd="@+id/usernameField"
            android:background="#ffffff"
            android:imeOptions="actionNext"
            android:layout_weight="0.40" />

        <Button android:id="@+id/loginButton"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/action_sign_in"
            android:textStyle="bold"
            android:textSize="18dp"
            android:imeOptions="actionNext"
            android:background="#ff6f1b"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SIGN UP"
            android:id="@+id/signUpText"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:background="#ff6f1b"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:paddingTop="5dp"
            android:paddingLeft="110dp"
            android:paddingRight="15dp"
            android:paddingEnd="55dp"
            android:layout_weight="0.29" />

    </LinearLayout>

    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

</LinearLayout>

