<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="khara.karan.netuse.LoginActivity" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/netuse_logo"
        android:layout_marginBottom="@dimen/pad_5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find matching universities. Stay connected with your colleagues. "
        android:id="@+id/textView13"
        android:textSize="16dp"
        android:textColor="#6f6f6f"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <!--<LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"-->
        <!--android:layout_height="284dp" android:orientation="vertical"-->
        <!--android:weightSum="1">-->

        <EditText
            android:id="@+id/usernameField"
            android:hint="Username"
            style="@style/editext_whitebg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_username" >
            <requestFocus />
        </EditText>
    <!--<EditText-->
        <!--android:id="@+id/emailField"-->
        <!--android:hint="Email"-->
        <!--style="@style/editext_whitebg"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="60dp"-->
        <!--android:drawableLeft="@drawable/ic_username" >-->
        <!--<requestFocus />-->
    <!--</EditText>-->


        <EditText
            android:id="@+id/passwordField"
            android:hint="Password"
            android:imeOptions="actionDone"
            style="@style/editext_whitebg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:layout_marginTop="@dimen/pad_5dp"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/ic_pwd"
            android:inputType="textPassword" >
             </EditText>

    <LinearLayout
        android:id="@+id/main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button android:id="@+id/loginButton"
            android:text="@string/action_sign_in"
            style="@style/btn_white_large"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/signUpText"
            style="@style/btn_white_large"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="@string/action_sign_up"
            android:layout_marginLeft="@dimen/pad_10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_30dp"
        android:id="@+id/forgotPwdText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="@dimen/pad_10dp"
        android:text="Forgot password?"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/newLoginMsg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You can now login with new password"
        android:visibility="invisible"
        android:textColor="@color/red" />

</LinearLayout>

</ScrollView>

