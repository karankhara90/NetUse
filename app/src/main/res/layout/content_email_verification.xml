<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="60dp"
    tools:context="khara.karan.netuse.authentication.emailVerification"
    android:background="@color/backgroundColor"
    tools:showIn="@layout/activity_email_verification">

    <AutoCompleteTextView
        android:id="@+id/emailVerify"
        android:hint="@string/signup_email"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        style="@style/editext_whitebg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/ic_username" >
        <requestFocus />
    </AutoCompleteTextView>

    <Button
        android:id="@+id/email_verify_button"
        android:text="@string/verify"
        style="@style/btn_white_large"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/pad_20dp"
        android:layout_below="@+id/emailVerify"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

</RelativeLayout>
