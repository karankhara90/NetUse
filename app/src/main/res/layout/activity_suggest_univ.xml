<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="khara.karan.netuse.SuggestUnivActivity"
    android:background="#b2fbc0">

    <!--ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:dividerHeight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtNames"
        android:background="#fff6a5"
        android:layout_marginBottom="90dp">
    </ListView-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="16dp"
        android:text="Suggested Universities from database "
        android:textColor="#5f5e5e"
        android:layout_gravity="left|top"
        android:id="@+id/txtNames2"
        android:height="35dp"
        android:paddingLeft="15dp"
        android:paddingTop="0dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/listViewSuggest"
        android:dividerHeight="2dp"
        android:background="#fff6a5"

        android:layout_below="@+id/txtNames2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="16dp"
        android:text="University Recommendations for you  "
        android:textColor="#5f5e5e"
        android:layout_gravity="left|top"
        android:id="@+id/txtNames3"
        android:height="35dp"
        android:paddingLeft="15dp"
        android:paddingTop="0dp"

        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/listViewRecommend"
        android:dividerHeight="2dp"
        android:background="#fff6a5"

        android:layout_below="@+id/txtNames3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </ListView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnBackNames"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listViewSuggest"
        android:layout_alignEnd="@+id/listViewSuggest" />

</RelativeLayout>