<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    android:orientation="vertical"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/univ_logo_pic2"
        android:layout_width="170px"
        android:layout_height="170px"
        android:background="#e6fecb"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/text_chance" />

    <TextView
        android:id="@+id/text_main_univ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3px"
        android:hint="univ name"
        android:layout_marginLeft="2dp"
        android:textColor="#0022ee"
        android:textSize="16dp"
        android:textStyle="bold"

        android:layout_alignTop="@+id/univ_logo_pic2"
        android:layout_alignLeft="@+id/sub_text_seen"
        android:layout_alignStart="@+id/sub_text_seen" />

    <TextView
        android:id="@+id/sub_text_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:padding="2px"
        android:hint="Rank: "
        android:textStyle="bold"
        android:layout_marginLeft="11dp"
        android:textColor="#4e4e4e"
        android:layout_alignTop="@+id/text_chance"
        android:layout_toRightOf="@+id/univ_logo_pic2"
        android:layout_toEndOf="@+id/univ_logo_pic2"
        android:layout_marginStart="25dp" />
    <TextView
        android:id="@+id/sub_text_rank2"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:padding="2px"
        android:hint="rank"
        android:textColor="#0022ee"
        android:layout_alignTop="@+id/sub_text_seen"
        android:layout_toRightOf="@+id/sub_text_seen"
        android:layout_toEndOf="@+id/sub_text_seen" />

    <TextView
        android:id="@+id/text_chance"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:hint="Chances...."
        android:paddingTop="5px"
        android:paddingBottom="1dp"
        android:textColor="#0022ee"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />
    <TextView
        android:id="@+id/sub_text_divide"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:textSize="14dp"
        android:hint="----------------------------------------------------------------------------------------"
        android:textColor="#dfdfdf"
        android:paddingBottom="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=", Chances:"
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="1px"
        android:layout_marginLeft="3dp"
        android:id="@+id/textView17"
        android:textColor="#4e4e4e"
        android:layout_above="@+id/sub_text_divide"
        android:layout_toRightOf="@+id/sub_text_rank2"
        android:layout_toEndOf="@+id/sub_text_rank2" />

</RelativeLayout>
