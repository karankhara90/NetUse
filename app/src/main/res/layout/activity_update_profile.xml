<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/backgroundColor" >
    tools:context="khara.karan.netuse.UpdateProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update profile"
        android:id="@+id/textView6"
        android:textColor="@color/main_color_green"
        android:textStyle="bold"
        android:height="40dp"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spNewUniv"
        android:background="#fbfacc"
        android:layout_marginTop="50dp"
        android:dividerHeight="9dp"
        android:layout_marginBottom="-10dp"
        android:minHeight="40dp"
        android:drawSelectorOnTop="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/myDone"
        android:background="@color/main_color_green"
        android:imeOptions="actionNext"
        android:layout_below="@+id/spNewUniv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

</RelativeLayout>
