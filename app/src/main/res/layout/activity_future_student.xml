<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context="khara.karan.netuse.FutureStudent"
    android:background="#dcfee3"
    >
    <RelativeLayout android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Welcome "
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#e3000000"
        android:layout_gravity="left|top"
        android:id="@+id/txtNames2"
        android:height="35dp"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#e3000000"

        android:id="@+id/name2"
        android:height="35dp"

        android:paddingLeft="5dp"
        android:paddingTop="5dp"

        android:layout_alignTop="@+id/txtNames2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtNames2"
        android:layout_toRightOf="@+id/txtNames2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got admitted? Add New University"
        android:id="@+id/textNewPlace2"
        android:textColor="#e3000000"
        android:layout_marginBottom="15dp"
        android:height="30dp"

        android:paddingTop="5dp"
        android:textSize="14dp"
        android:layout_below="@+id/txtNames2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnAddUniv2"
        android:layout_toLeftOf="@+id/btnAddUniv2" />


    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Add"
        android:textSize="15dp"
        android:id="@+id/btnAddUniv2"
        android:background="#ff6f1b"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textNewPlace2"
        android:layout_below="@+id/name2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universities based on my profile"
        android:id="@+id/textViewSuggest2"
        android:textColor="#e3000000"

        android:height="25dp"
        android:textSize="16dp"
        android:layout_below="@+id/spChooseStates"
        android:layout_marginTop="48dp"
        android:layout_alignRight="@+id/spChooseStates"
        android:layout_alignEnd="@+id/spChooseStates"
        android:layout_alignLeft="@+id/spUnivType"
        android:layout_alignStart="@+id/spUnivType" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Suggest Universities"
        android:id="@+id/btnSuggestUniv2"
        android:textSize="15dp"
        android:height="30dp"

        android:background="#ff6f1b"
        android:textColor="#ffffff"

        android:layout_below="@+id/textViewSuggest2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textViewSuggest2"
        android:layout_alignStart="@+id/textViewSuggest2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="16dp"
            android:text="Choose Your Preferences "
            android:textColor="#e3000000"
            android:layout_gravity="left|top"
            android:id="@+id/txtPreference"
            android:height="35dp"
            android:paddingTop="0dp"

            android:background="#d1fedb"
            android:layout_above="@+id/spUnivType"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:id="@+id/spUnivType"
            android:background="#f4feec"
            android:nestedScrollingEnabled="true"
            android:layout_above="@+id/spChooseStates"
            android:layout_alignLeft="@+id/txtPreference"
            android:layout_alignStart="@+id/txtPreference"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="    Nearby Places"
        android:id="@+id/textSuggestNearby2"
        android:textColor="#e3000000"

        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnSuggestNearby2"
        android:layout_toStartOf="@+id/btnSuggestNearby2"
        android:layout_alignTop="@+id/btnSuggestNearby2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Check here"
        android:id="@+id/btnSuggestNearby2"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#ff6f1b"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtNames2"
        android:layout_toEndOf="@+id/txtNames2" /-->



        <khara.karan.netuse.MultiSelectionSpinner
            android:id="@+id/spChooseStates"
            android:background="#f3fee8"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/spUnivType"
            android:layout_alignStart="@+id/spUnivType"></khara.karan.netuse.MultiSelectionSpinner>

        <!--Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After select, Click here"
            android:id="@+id/btnChooseStates"
            android:textSize="14dp"
            android:layout_marginRigh="15dp"
            android:background="#ff6f1b"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/spChooseStates"
            android:layout_toRightOf="@+id/spChooseStates"
            android:layout_toEndOf="@+id/spChooseStates" /-->

        <!--Button
            android:id="@+id/getSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check"
            /-->

    </RelativeLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
