<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="khara.karan.netuse.FutureStudent"
    android:background="#a4c5a8"
    >
    <RelativeLayout android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6ad2ff" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Welcome "
        android:textColor="#ffffff"
        android:layout_gravity="left|top"
        android:id="@+id/txtNames2"
        android:height="35dp"
        android:paddingLeft="45dp"
        android:paddingTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textNewPlace"
        android:layout_alignEnd="@+id/textNewPlace" />
    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ffffff"

        android:id="@+id/name2"
        android:height="35dp"

        android:paddingLeft="5dp"
        android:paddingTop="5dp"

        android:layout_alignTop="@+id/txtNames2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtNames2"
        android:layout_toRightOf="@+id/txtNames2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got admitted?"
        android:id="@+id/textNewPlace2"
        android:textColor="#ffffff"
        android:height="30dp"

        android:layout_marginTop="37dp"
        android:textSize="20dp"
        android:layout_below="@+id/txtNames2"
        android:layout_alignRight="@+id/name2"
        android:layout_alignEnd="@+id/name2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Add New University "
        android:textSize="15dp"
        android:id="@+id/btnAddUniv2"
        android:background="#ff6f1b"
        android:textColor="#ffffff"
        android:layout_below="@+id/textNewPlace2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/name2"
        android:layout_alignEnd="@+id/name2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universities based on my profile"
        android:id="@+id/textViewSuggest2"
        android:textColor="#ffffff"

        android:height="30dp"
        android:textSize="19dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/btnAddUniv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Suggest Universities"
        android:id="@+id/btnSuggestUniv2"
        android:textSize="15dp"
        android:height="30dp"

        android:background="#ff6f1b"
        android:textColor="#ffffff"
        android:layout_below="@+id/textViewSuggest2"
        android:layout_alignRight="@+id/textViewSuggest2"
        android:layout_alignEnd="@+id/textViewSuggest2"
        android:layout_alignLeft="@+id/textViewSuggest2"
        android:layout_alignStart="@+id/textViewSuggest2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Nearby Places"
        android:id="@+id/textSuggestNearby2"
        android:textColor="#ffffff"

        android:textSize="19dp"
        android:layout_alignTop="@+id/btnSuggestNearby2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Check here"
        android:id="@+id/btnSuggestNearby2"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:background="#ff6f1b"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/btnSuggestUniv2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textSuggestNearby2"
        android:layout_toEndOf="@+id/textSuggestNearby2" />
    </RelativeLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="khara.karan.netuse.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />


</android.support.v4.widget.DrawerLayout>
