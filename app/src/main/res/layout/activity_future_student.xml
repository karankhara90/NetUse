<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context="khara.karan.netuse.FutureStudent" >

    <RelativeLayout android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d4e7ff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:numStars="5"
            android:rating="1.3"
            android:stepSize="0.5"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView13"
            android:layout_alignEnd="@+id/textView13"
            android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="22dp"
        android:text="Welcome "
        android:textColor="@color/textColor"
        android:layout_gravity="left|top"
        android:id="@+id/txtNames2"
        android:height="35dp"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />
    <TextView
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:textSize="22dp"
        android:textColor="@color/textColor"
        android:id="@+id/name2"
        android:height="35dp"
        android:paddingLeft="5dp"
        android:paddingTop="0dp"

        android:layout_alignTop="@+id/txtNames2"
        android:layout_toRightOf="@+id/txtNames2"
        android:layout_alignRight="@+id/btnAddUniv2"
        android:layout_alignEnd="@+id/btnAddUniv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got admitted? Add New University "
        android:id="@+id/textNewPlace2"
        android:textColor="@color/textColor"
        android:height="30dp"

        android:paddingTop="5dp"
        android:textSize="14dp"
        android:layout_below="@+id/btnSuggestUniv2"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="78dp" />


    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Add"
        android:textSize="15dp"
        android:id="@+id/btnAddUniv2"
        android:background="#ff6f1b"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textNewPlace2"
        android:layout_toRightOf="@+id/textNewPlace2"
        android:layout_toEndOf="@+id/textNewPlace2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universities based on my profile"
        android:id="@+id/textViewSuggest2"
        android:textColor="@color/textColor"

        android:height="25dp"
        android:textSize="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Suggest Universities"
        android:id="@+id/btnSuggestUniv2"
        android:textSize="20dp"
        android:height="30dp"
        android:background="#ff6f1b"
        android:textColor="#ffffff"


        android:layout_below="@+id/textViewSuggest2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find the matching universities based on your profile. Rate on top, if you find the list of recommended universities helpful "
            android:id="@+id/textView13"
            android:textSize="16dp"
            android:textColor="#6f6f6f"
            android:layout_marginTop="91dp"
            android:layout_below="@+id/textView16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Rating "
            android:id="@+id/textView15"
            android:layout_alignBottom="@+id/ratingBar1"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            android:layout_toLeftOf="@+id/ratingBar1"
            android:layout_toStartOf="@+id/ratingBar1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Avg Ratings "
            android:id="@+id/textView16"
            android:textColor="@color/textColor"
            android:layout_marginTop="10dp"
            android:paddingTop="0dp"
            android:textSize="16dp"
            android:layout_below="@+id/ratingBar1"
            android:layout_toLeftOf="@+id/textAvgRating"
            android:layout_toStartOf="@+id/textAvgRating"
             />

        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:text=" "
            android:paddingLeft="5dp"
            android:id="@+id/textAvgRating"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ratingBar1"
            android:layout_toRightOf="@+id/textView15"
            android:textColor="@color/textColor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="/5"
            android:paddingLeft="5dp"
            android:id="@+id/textView18"
            android:textColor="@color/textColor"
            android:paddingTop="1dp"
            android:layout_alignTop="@+id/textAvgRating"
            android:layout_toRightOf="@+id/textAvgRating"
            android:layout_toEndOf="@+id/textAvgRating" />



        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
            <!--android:text="Small Text"-->
            <!--android:id="@+id/textView15"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_toRightOf="@+id/txtPreference"-->
            <!--android:layout_toEndOf="@+id/txtPreference" />-->

        <!--Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After select, Click here"
            android:id="@+id/btnChooseStates"
            android:textSize="14dp"
            android:layout_marginRigh="15dp"
            android:background="#ff6f1b"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/spChooseStates"
            android:layout_toRightOf="@+id/spChooseStates"
            android:layout_toEndOf="@+id/spChooseStates" /-->

        <!--Button
            android:id="@+id/getSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check"
            /-->

    </RelativeLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
