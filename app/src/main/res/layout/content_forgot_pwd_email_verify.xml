<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->

    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
    <!--tools:context="khara.karan.netuse.authentication.forgotPwdEmailVerify"-->
    <!--tools:showIn="@layout/activity_forgot_pwd_email_verify">-->


        <AutoCompleteTextView
            android:id="@+id/emailNewPwdVerify"
            android:hint="Verify email"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            style="@style/editext_whitebg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_username" >
            <requestFocus />
        </AutoCompleteTextView>

        <Button
            android:id="@+id/email_new_pwd_verify_button"
            android:text="@string/verify"
            style="@style/btn_white_large"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/pad_20dp"
            android:layout_below="@+id/emailNewPwdVerify"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

</RelativeLayout>
