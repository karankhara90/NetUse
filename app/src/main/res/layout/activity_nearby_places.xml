<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#6ad2ff"
    tools:context="khara.karan.netuse.NearbyPlaces">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="Nearby Places "
        android:layout_marginTop="0dp"
        android:textColor="#ffffff"
        android:layout_gravity="left|top"
        android:id="@+id/txtNames"
        android:layout_alignParentTop="true"
        android:height="35dp"
        android:paddingLeft="85dp"
        android:paddingTop="3dp"
        android:background="#fcb000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new Place Nearby"
        android:id="@+id/textNewPlace"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtNames"
        android:layout_alignLeft="@+id/txtNames"
        android:layout_alignStart="@+id/txtNames"
        android:height="30dp"

        android:layout_marginTop="16dp"
        android:textSize="20dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Add place"
        android:id="@+id/btnAddPlace"
        android:background="#e8ec9b"
        android:layout_alignTop="@+id/textNewPlace"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@+id/txtNames"
        android:layout_alignEnd="@+id/txtNames"
        android:layout_toRightOf="@+id/textNewPlace"
        android:layout_toEndOf="@+id/textNewPlace" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/listView1"
        android:layout_centerHorizontal="true"
        android:dividerHeight="2dp"
        android:background="#fcf7c9"
        android:layout_above="@+id/btnBackPlaces"
        android:layout_below="@+id/btnToRec" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:text="Back"
        android:paddingTop="5dp"
        android:id="@+id/btnBackPlaces"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rec Places"
        android:id="@+id/btnToRec"
        android:layout_below="@+id/textNewPlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
