<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="#dcfee3"
    tools:context="khara.karan.netuse.UserProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Full Name"
        android:id="@+id/textField22"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textProfileFullName"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textField22"
        android:layout_alignTop="@+id/textField22"
        android:layout_toRightOf="@+id/textField22"
        android:layout_toEndOf="@+id/textField22"
        android:background="#e8ffd5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="YOUR PROFILE"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textField22"
        android:layout_toEndOf="@+id/textField22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Previous University"
        android:id="@+id/textView14"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textField22"
        android:layout_toLeftOf="@+id/textProfileFullName"
        android:layout_toStartOf="@+id/textProfileFullName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textProfilePrevUni"
        android:background="#e8ffd5"
        android:layout_alignRight="@+id/textProfileFullName"
        android:layout_alignEnd="@+id/textProfileFullName"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignLeft="@+id/textProfileFullName"
        android:layout_alignStart="@+id/textProfileFullName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Country"
        android:layout_marginTop="10dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textField22"
        android:layout_alignEnd="@+id/textField22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textProfileCountry"
        android:background="#e8ffd5"
        android:layout_alignRight="@+id/textProfilePrevUni"
        android:layout_alignEnd="@+id/textProfilePrevUni"

        android:layout_alignBottom="@+id/textView16"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignLeft="@+id/textProfileFullName"
        android:layout_alignStart="@+id/textProfileFullName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Percentage"
        android:id="@+id/textView12"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textProfilePercent"
        android:background="#e8ffd5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignLeft="@+id/textProfileCountry"
        android:layout_alignStart="@+id/textProfileCountry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GRE score"
        android:id="@+id/textView18"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textProfileGre"
        android:background="#e8ffd5"
        android:layout_alignRight="@+id/textProfilePercent"
        android:layout_alignEnd="@+id/textProfilePercent"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignLeft="@+id/textProfilePercent"
        android:layout_alignStart="@+id/textProfilePercent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TOEFL score"
        android:id="@+id/textView20"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textProfileToefl"
        android:background="#e8ffd5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView20"
        android:layout_alignLeft="@+id/textProfileGre"
        android:layout_alignStart="@+id/textProfileGre" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:text="Back"
        android:paddingTop="5dp"
        android:id="@+id/btnBackProfile"
        android:background="#ff6f1b"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textProfileToefl"
        android:layout_alignEnd="@+id/textProfileToefl" />


</RelativeLayout>
