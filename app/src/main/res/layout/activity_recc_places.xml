<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#6ad2ff"

    tools:context="khara.karan.netuse.ReccPlaces">


    <TextView
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="place info"
        android:textSize="13dp"
        android:background="#fff6a5"
        android:id="@+id/textView3"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnLike"
        android:layout_toStartOf="@+id/btnLike" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textSize="11dp"
        android:paddingTop="8dp"
        android:text="Like"
        android:id="@+id/btnLike"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignRight="@+id/listRecc"
        android:layout_alignEnd="@+id/listRecc" />

    <!--/FrameLayout-->



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:id="@+id/listRecc"
        android:background="#fdfbeb"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Recommendations"
        android:paddingLeft="23pt"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listRecc"
        android:layout_alignEnd="@+id/listRecc" />
    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:text="Back"
        android:paddingTop="8dp"
        android:id="@+id/btnBackRecc"
        android:layout_below="@+id/btnLike"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/ratingBar"
        android:rating="3"
        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Recommendations"
        android:paddingLeft="23pt"
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:layout_below="@+id/listRecc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listRecc"
        android:layout_alignEnd="@+id/listRecc" />


</RelativeLayout>


