<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="khara.karan.netuse.CreateProfileFragment">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:height="30dp"
            android:paddingLeft="60dp"
            android:text="Create Your Full Profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/main_color_green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/getUserName"
            style="@style/editext_whitebg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/myFullName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/myFullName"
            android:layout_below="@+id/textView4"
            android:layout_marginBottom="10dp"
            android:hint="username will show here"
            android:text="  "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spCountry"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/myFullName"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />

        <Spinner
            android:id="@+id/spUniversity"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spCountry"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:dividerHeight="3dp"
            android:drawSelectorOnTop="true" />


        <EditText
            android:id="@+id/myFullName"
            style="@style/editext_whitebg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/getUserName"
            android:ems="10"
            android:hint="Full Name"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:imeOptions="actionNext"
            android:singleLine="true" />

        <requestFocus />


        <EditText
            android:id="@+id/myPercent"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/spUniversity"
            android:layout_alignLeft="@+id/spUniversity"
            android:layout_alignRight="@+id/spUniversity"
            android:layout_alignStart="@+id/spUniversity"
            android:layout_below="@+id/spUniversity"
            android:layout_marginTop="5dp"
            android:autoText="false"
            android:background="@color/white"
            android:hint="Undergrad Percentage"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/myGre"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/myPercent"
            android:layout_alignLeft="@+id/myPercent"
            android:layout_alignRight="@+id/myPercent"
            android:layout_alignStart="@+id/myPercent"
            android:layout_below="@+id/myPercent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="GRE Score(Out of 340)"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/myToefl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/myGre"
            android:layout_alignLeft="@+id/myGre"
            android:layout_alignRight="@+id/myGre"
            android:layout_alignStart="@+id/myGre"
            android:layout_below="@+id/myGre"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:hint="TOEFL SCORE(Out of 120)"
            android:imeOptions="actionGo"
            android:maxLines="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/myNext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/myToefl"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@color/main_color_green"
            android:imeOptions="actionNext"
            android:text="Next"
            android:textColor="@color/white" />


        <!--<ScrollView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/scrollView"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentTop="true" />-->


    </LinearLayout>
