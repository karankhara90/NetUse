<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="khara.karan.netuse.CreateProfileFragment"
    android:background="#6ad2ff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Your Full Profile"
        android:id="@+id/textView4"
        android:height="30dp"
        android:paddingLeft="60dp"
        android:textColor="#ffffff"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:ems="10"
        android:id="@+id/myFullName"
        android:layout_marginTop="5dp"
        android:background="#fbfacc"
        android:height="40dp"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@+id/getUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <requestFocus />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/myPercent"
        android:hint="Undergrad Percentage"
        android:background="#fbfacc"
        android:autoText="false"
        android:layout_below="@+id/spUniversity"
        android:layout_alignLeft="@+id/spUniversity"
        android:layout_alignStart="@+id/spUniversity"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/spUniversity"
        android:layout_alignEnd="@+id/spUniversity"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myGre"
        android:hint="GRE Score(Out of 340)"
        android:background="#fbfacc"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/myPercent"
        android:layout_alignLeft="@+id/myPercent"
        android:layout_alignStart="@+id/myPercent"
        android:layout_alignRight="@+id/myPercent"
        android:layout_alignEnd="@+id/myPercent"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myToefl"
        android:hint="TOEFL SCORE(Out of 120)"
        android:layout_marginTop="5dp"
        android:background="#fbfacc"
        android:layout_below="@+id/myGre"
        android:layout_alignLeft="@+id/myGre"
        android:layout_alignStart="@+id/myGre"
        android:layout_alignRight="@+id/myGre"
        android:layout_alignEnd="@+id/myGre"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/myNext"
        android:layout_marginTop="5dp"
        android:background="#fcb000"
        android:imeOptions="actionNext"
        android:layout_below="@+id/myToefl"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spCountry"
        android:background="#fbfacc"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/myFullName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spUniversity"
        android:background="#fbfacc"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/spCountry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  "
        android:id="@+id/getUserName"
        android:height="30dp"
        android:background="#fbfacc"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />


</RelativeLayout>
