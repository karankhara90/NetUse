            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="khara.karan.netuse.FutureStudent" />
        </activity>
        <activity
            android:name=".ShowRecResults"
            android:label="@string/title_activity_show_rec_results"
